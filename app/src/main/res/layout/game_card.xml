<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/game_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:elevation="4dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/gray">

        <!-- Game Image -->
        <ImageView
            android:id="@+id/game_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop" />

        <!-- Platform icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginTop="8dp">

            <!-- Xbox Icon -->
            <ImageView
                android:id="@+id/icon_xbox"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:visibility="gone"
                android:contentDescription="Xbox Icon"
                android:layout_marginEnd="8dp" />

            <!-- Pc Icon -->
            <ImageView
                android:id="@+id/icon_pc"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:visibility="gone"
                android:contentDescription="PC Icon"
                android:layout_marginEnd="8dp" />

            <!-- Ps Icon -->
            <ImageView
                android:id="@+id/icon_ps"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:visibility="gone"
                android:contentDescription="PlayStation Icon"
                android:layout_marginEnd="8dp" />

            <!-- Nintendo Icon -->
            <ImageView
                android:id="@+id/icon_nintendo"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:visibility="gone"
                android:contentDescription="Nintendo Icon" />
        </LinearLayout>

        <!-- Game Name -->
        <TextView
            android:id="@+id/game_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <!-- Rating & Genre -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp">

            <TextView
                android:id="@+id/game_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rating: 12"
                android:paddingRight="10dp"
                android:textSize="14sp"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/game_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/white" />
        </LinearLayout>

        <!-- Details Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/view_details_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_gravity="center"
            android:text="View Details"
            android:textColor="@android:color/black"
            android:padding="8dp"
            app:backgroundTint="@color/white"
            app:cornerRadius="16dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
