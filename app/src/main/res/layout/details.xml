<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:id="@+id/details_view"
    android:paddingBottom="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            layout="@layout/toolbar"/>

        <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="70dp"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            tools:ignore="MissingConstraints">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Imagen -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Imagen del videojuego -->
                    <ImageView
                        android:id="@+id/game_image"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop" />

                    <!-- Contenedor de fecha e iconos de consola -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="4dp">

                        <!-- Fecha -->
                        <TextView
                            android:id="@+id/game_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="20 Nov, 2024"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray" />

                        <!-- Espacio para iconos de consolas -->
                        <LinearLayout
                            android:id="@+id/game_consoles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginStart="8dp">
                            <!-- Aquí se agregarán los iconos dinámicamente -->
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Título del videojuego -->
                    <TextView
                        android:id="@+id/game_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Título del Videojuego"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingTop="4dp" />
                </LinearLayout>

                <!-- Popularity -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <!-- Columna de título y ratings -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Título de calificación -->
                        <TextView
                            android:id="@+id/game_rating_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Excepcional"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- Total de ratings -->
                        <TextView
                            android:id="@+id/game_total_ratings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1,245 ratings"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray" />
                    </LinearLayout>

                    <!-- Columna de popularidad y género -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <!-- Posición de popularidad -->
                        <TextView
                            android:id="@+id/game_popularity_rank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#10"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- Género principal -->
                        <TextView
                            android:id="@+id/game_genre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shooter"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray" />
                    </LinearLayout>

                    <!-- Columna de ranking anual -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <!-- Ranking anual -->
                        <TextView
                            android:id="@+id/game_top_rank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="#3"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- Etiqueta de ranking anual -->
                        <TextView
                            android:id="@+id/game_top_year"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Top 2024"
                            android:textSize="14sp"
                            android:textColor="@android:color/darker_gray" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Where to buy -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Título -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Where to buy?"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingBottom="8dp" />

                    <!-- Grid de tarjetas de tiendas -->
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2">

                        <!-- Tarjeta de tienda -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_columnSpan="1"
                            android:layout_gravity="fill"
                            android:layout_margin="8dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="4dp"
                            app:cardBackgroundColor="@color/gray">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:padding="12dp"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_steam" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:text="Steam"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/white"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </GridLayout>
                </LinearLayout>

                <!-- About -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Título de la sección -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="About"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingBottom="4dp" />

                    <!-- Descripción del videojuego -->
                    <TextView
                        android:id="@+id/game_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Descripción del videojuego aquí..."
                        android:textSize="14sp"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <!-- Info -->
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:padding="8dp">

                        <!-- Columna: Platforms -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical">

                            <TextView
                                android:text="Platforms"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/game_platforms"
                                android:text="PC, PS5, Xbox"
                                android:textSize="14sp"
                                android:textColor="@android:color/darker_gray"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <!-- Columna: Genre -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical">

                            <TextView
                                android:text="Genre"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/game_genre1"
                                android:text="Shooter"
                                android:textSize="14sp"
                                android:textColor="@android:color/darker_gray"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <!-- Columna: Release Date -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical">

                            <TextView
                                android:text="Release Date"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/game_release_date"
                                android:text="Nov 20, 2024"
                                android:textSize="14sp"
                                android:textColor="@android:color/darker_gray"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <!-- Columna: Developer -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical">

                            <TextView
                                android:text="Developer"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/game_developer"
                                android:text="Game Studio X"
                                android:textSize="14sp"
                                android:textColor="@android:color/darker_gray"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <!-- Columna: Publisher -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical">

                            <TextView
                                android:text="Publisher"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/game_publisher"
                                android:text="Publisher Y"
                                android:textSize="14sp"
                                android:textColor="@android:color/darker_gray"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </GridLayout>
                </LinearLayout>


                <!-- Requeriments -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Título de la sección -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="System requirements for PC"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:paddingBottom="8dp" />

                    <!-- Requisitos Mínimos -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Minimum"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:paddingBottom="4dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:text="OS: Windows 10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView android:text="Processor: Intel Core i5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView android:text="Memory: 8GB RAM"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView android:text="Graphics: NVIDIA GTX 1050 Ti"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView android:text="Storage: 50GB available space"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView android:text="Additional Notes: DirectX 12 required"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <!-- Requisitos Recomendados -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recommended"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:paddingTop="8dp"
                        android:paddingBottom="4dp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView android:text="OS: Windows 11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView android:text="Processor: Intel Core i7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView android:text="Memory: 16GB RAM"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView android:text="Graphics: NVIDIA RTX 3060"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView android:text="Storage: 50GB SSD space"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView android:text="Additional Notes: SSD recommended"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</androidx.constraintlayout.widget.ConstraintLayout>